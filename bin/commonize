#!/usr/bin/env node

require("commoner").resolve(function(id) {
    var context = this;
    return context.getProvidedP().then(function(idToPath) {
        if (idToPath.hasOwnProperty(id))
            return context.readFileP(idToPath[id]);
    });
}, function(id) {
    return this.readFileP(id + ".js");
});
